<div class="header"> 
  <h1 class="page-header">
    Colores
  </h1>
  <ol class="breadcrumb">
    <li><a href="#">Colores</a></li>
    <li class="active">Index</li>
  </ol> 
</div>

<div id="page-inner">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-content"> 
          <div class="row">
            <div class="card-content">
              <h3>Colores registrados</h3><br>
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <th>Description</th>
                      <th>Editar</th>
                      <th>Eliminar</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @colors.each do |color| %>
                    <tr>
                      <td><%= color.description %></td>
                      <td><%= link_to '', edit_color_path(color), class: 'fas fa-edit' %></td>
                      <td><%= link_to '' , color, method: :delete, data: { confirm: 'EstÃ¡s seguro?' }, class: "fas fa-trash"  %></td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
                <%= link_to 'Nuevo color', new_color_path %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>