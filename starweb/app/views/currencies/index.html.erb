<div class="header"> 
  <h1 class="page-header">
    Monedas
  </h1>
  <ol class="breadcrumb">
    <li><a href="#">Inicio</a></li>
    <li><a href="#">Monedas</a></li>
    <li class="active">Index</li>
  </ol> 
</div>

<div id="page-inner">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>
      <div class="card">
        <div class="card-content"> 
          <div class="row">
            <div class="card-content">
              <h3>Monedas creados</h3><br>
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <th>Moneda</th>
                      <th>Editar</th>
                      <th>Eliminar</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @currencies.each do |currency| %>
                    <tr>
                      <td><%= currency.name %></td>
                      <td><%= link_to '', edit_currency_path(currency) , class: 'fas fa-edit' %></td>
                      <td><%= link_to '', currency, method: :delete, data: { confirm: 'EstÃ¡s seguro?' }, class: "fas fa-trash"  %></td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
                <%= link_to 'Nueva moneda', new_currency_path %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>