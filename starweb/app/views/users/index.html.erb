<div class="header"> 
  <h1 class="page-header">
    Usuarios
  </h1>
  <ol class="breadcrumb">
    <li><a href="#">Usuarios</a></li>
    <li class="active">Index</li>
  </ol> 
</div>

<div id="page-inner">
  <div class="row">
    <div class="col-md-12">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Email</th>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Rol</th>
              <th>Editar permisos</th>
              <th>Eliminar usuario</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td><%= user.firstname %></td>
              <td><%= user.lastname %></td>
              <% if user.permission_level == '3' %>
              <td>Admin</td>
              <% elsif user.permission_level == '2' %>
              <td>Secretaria</td>
              <% elsif user.permission_level == '1' %>
              <td>Equipo de trabajo</td>
              <% else %>
              <td>No asignado</td>
              <%end%>
              <td><%= link_to '', users_edit_path(user), class: 'fas fa-edit' %></td>
              <td><%= link_to '', users_destroy_path(user), data: { confirm: 'EstÃ¡s seguro?' }, class: "fas fa-trash"  %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'Nuevo', new_user_invitation_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>