<div class="header"> 
  <h1 class="page-header">
    Insumos
  </h1>
  <ol class="breadcrumb">
    <li><a href="#">Inicio</a></li>
    <li><a href="#">Insumos</a></li>
    <li class="active">Index</li>
  </ol> 
</div>

<div id="page-inner">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Imagen</th>
                <th>Stock</th>
                <th>Descripción</th>
                <th>Editar</th>
                <th>Eliminar</th>
              </tr>
            </thead>
            <tbody>
              <% @supplies.each do |supply| %>
              <tr>
                <td><%= supply.name %></td>
                <td><%= supply.image %></td>
                <td><%= supply.stock %></td>
                <td><%= supply.description %></td>
                <td><%= link_to '', edit_supply_path(supply), class: 'fas fa-edit' %></td>
                <td><%= link_to '', supply, method: :delete, data: {  confirm: 'Estás seguro?' }, class: "fas fa-trash" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <%= link_to 'Nuevo', new_supply_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</div>