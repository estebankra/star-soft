<div class="header"> 
  <h1 class="page-header">
    Productos
  </h1>
  <ol class="breadcrumb">
    <li class="#">Productos</li>
  </ol> 
</div>

<div id="page-inner">
  <div class="row">
    <div class="col-md-12">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Precio</th>
              <th>Imagen</th>
              <th>Descripción</th>
              <th>Insumos</th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
            <tr>
              <td><%= product.name %></td>
              <td><%= product.price %></td>
              <td><%= image_tag product.image.url(:thumb)%></td>
              <td><%= product.description %></td>
              <td><% product.supplies.each do |supply|%>
                <%= supply.name %>
                <%end%>
              </td>
              <td style="width: 70px"><%= link_to '', edit_product_path(product) , class: 'fas fa-edit' %> | <%= link_to '', product, method: :delete, data: { confirm: 'Estás seguro?' }, class: "fas fa-trash"  %></td>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'Nuevo', new_product_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
