<div class="header"> 
  <h1 class="page-header">
    Productos
  </h1>
  <ol class="breadcrumb">
    <li><a href="#">Inicio</a></li>
    <li><a href="#">Productos</a></li>
    <li class="active">Index</li>
  </ol> 
</div>

<div id="page-inner">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>
      <div class="card">
        <div class="card-content"> 
          <div class="row">
            <div class="card-content">
              <h3>Productos registrados</h3><br>
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <th>Nombre</th>
                      <th>Precio</th>
                      <th>Imagen</th>
                      <th>Tamaño</th>
                      <th>Descripción</th>
                      <th>Insumos</th>
                      <th>Editar</th>
                      <th>Eliminar</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @products.each do |product| %>
                    <tr>
                      <td><%= product.name %></td>
                      <td><%= product.price %></td>
                      <td><%= image_tag product.image.url(:thumb)%></td>
                      <td><%= product.size %></td>
                      <td><%= product.description %></td>
                      <td><% product.supplies.each do |supply|%>
                            <%= supply.name %>
                          <%end%>
                      </td>
                      <td><%= link_to '', edit_product_path(product) , class: 'fas fa-edit' %></td>
                      <td><%= link_to '', product, method: :delete, data: { confirm: 'Estás seguro?' }, class: "fas fa-trash"  %></td>
                    <% end %>
                  </tbody>
                </table>
                <%= link_to 'Nuevo producto', new_product_path %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>