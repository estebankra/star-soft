<h1>Pedidos</h1>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Pedidos</a></li>
        <li class="breadcrumb-item"><%= link_to "Index", orders_path %></li>
    <li class="breadcrumb-item active" aria-current="page">Detalles</li>
  </ol>
</nav>
</div>
<hr>
<div id="page-inner">
  <% if current_user.is_secretary? %>
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalProduct"> Agregar producto </button>

  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalOrderDetail">Agregar detalles</button>

  <%= link_to 'Editar', edit_order_path(@order), class: 'btn btn-light' %>
  <%end%>
  <div class="row mt-4">
    <div class="col-md-6">
      <div class="row">
        <div class="col-md-6 col-sm-12">
          <h4>Pedido</h4>
          <hr>
          <div class="card col-md-12">
            <div class="card-body">
              <p class="card-text">
                <b>Fecha de entrega</b><br><%= @order.deliver_date %>
              </p>
              <p>
                <b>Estado</b>
                <% if @order.state == 'En espera' %>
                  <p class='alert alert-danger'><%= @order.state %></p>
                <% elsif @order.state == 'En proceso' %>
                  <p class='alert alert-warning'><%= @order.state %>
                <% else @order.state == 'Completado' %>
                  <p class='alert alert-success'><%= @order.state %></p>
                <%end%>
              </p>
              <p>
                <b>Notas</b><br><%= @order.notes %>
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-sm-12">
          <h4>Cliente</h4>
          <hr>
          <div class="card col-md-12">
            <div class="card-body">
              <p class="card-text">
                <b>Nombre y Apellido</b><br><%= @order.client.firstname %>
                <%= @order.client.lastname %> 
              </p>
              <p class="card-text">
                <b>Documento - RUC</b><br>
                <%= @order.client.doc_ruc %>
              </p>
              <p class="card-text"s>
                <b>Curso / Club</b> <br><%= @order.course_club %>
              </p>
              <p class="card-text"s>
                <b>Logo:</b> <br><%= image_tag @order.logo.url(:thumb) %>
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
       <div class="col-md-12">
        <hr>
          <h4>Detalles</h4>     
          <% if @order.order_details.empty? %>
            <p>No ha agregado ningún detalle</p>
          <% else %>
            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <th>Nombre</th>
                    <th>Número</th>
                    <th>Tamaño</th>
                  </tr>
                </thead>
                <tbody>
                  <% @order.order_details.each do |order_detail| %>   
                  <tr>
                    <td><%= order_detail.name %></td>
                    <td><%= order_detail.number %></td>
                    <td><%= order_detail.size %><br> 
                    <td style="width: 20px;"><%= link_to '' , order_detail, method: :delete, data: { confirm: 'Estás seguro?' }, class: "fas fa-trash"  %></td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
              <%end%>
            </div>
        <br>
        </div>
    </div>

    <div class="col-md-6">
      <h4>Productos</h4>
      <hr>
      <% @order.has_products.each do |hasProduct| %>
      <% if @order.has_products.empty? %>
      <p>No ha agregado ningún producto</p>
      <% else %>
      <div class="card col-md-12">
        <div class="row no-gutters">
          <div class="col-md-4">
            <%= image_tag hasProduct.product.image.url(:thumb), class: 'card-img' %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><b><%= hasProduct.product.name %></b>   </h5>
              <p class="card-text">
                <p><b>Frontal</b> <br><%= hasProduct.specs_f %></p>
                <p><b>Dorso</b> <br><%= hasProduct.specs_b %></p>
                <p><b>Cantidad</b> <br><%= hasProduct.quantity %></p>
                <p><b>Color</b> <br><%= hasProduct.color %></p>
            </p>
          </div>
        </div>
      <%end%>
      </div>
    </div>
    <%end%>
    </div>
  </div>

    <!-- Modal -->
    <div class="modal fade" id="modalProduct" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Agregar producto</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= render 'form_has_product', has_product: @hasProduct %>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="modalOrderDetail" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Agregar detalles</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= render 'form_order_detail', order_detail: @order_detail %>
          </div>
        </div>
      </div>
    </div>
    <!-- /. PAGE INNER  -->
  </div>
  <!-- /. PAGE WRAPPER  -->
</div>