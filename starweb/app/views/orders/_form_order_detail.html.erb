<%= simple_form_for order_detail, defaults: { label_html: { class: 'font-weight-bold' } }, remote: true do |form| %>
  <%= form.error_notification %>

  <%= form.hidden_field :order_id, value: order.id %>

  <%= form.input :name, label: 'Nombre' %>

  <%= form.input :number, label: 'Número' %>

  <%= form.input :size, collection: %w(XS S M X L XL XXL), label: 'Tamaño' %>

  <%= form.submit 'Guardar', class: 'btn btn-primary' %>

<% end %>