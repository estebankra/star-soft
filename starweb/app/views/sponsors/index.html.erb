<div class="header"> 
  <h1 class="page-header">
    Auspiciantes
  </h1>
  <ol class="breadcrumb">
    <li class="#">Auspiciantes</li>
  </ol> 
</div>

<div id="page-inner">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Imagen</th> 
              </tr>
            </thead>
            <tbody>
              <% @sponsors.each do |sponsor| %>
              <tr>
                <td><%= sponsor.name %></td>
                <td><%= image_tag sponsor.image.url(:thumb) %></td>
                <td style="width: 70px"><%= link_to '', edit_sponsor_path(sponsor), class: 'fas fa-edit' %> | <%= link_to '', sponsor, method: :delete, data: {  confirm: 'EstÃ¡s seguro?' }, class: "fas fa-trash" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <%= link_to 'Nuevo', new_sponsor_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</div>